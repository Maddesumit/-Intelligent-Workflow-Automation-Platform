# Application Settings
APP_NAME=Intelligent Workflow Automation Platform
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# API Settings
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Settings
DATABASE_URL=postgresql+asyncpg://workflow_user:workflow_pass@db:5432/workflow_db
DATABASE_SYNC_URL=postgresql://workflow_user:workflow_pass@db:5432/workflow_db

# Redis Settings
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Celery Settings
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=300

# Logging
LOG_LEVEL=INFO
